<?xml version="1.0" encoding="UTF-8" ?>    
<!DOCTYPE mapper    
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"    
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ofly.ep.admin.demo.dao.IDemoDao">
	<select id="query" resultType="String">
		select a.title from ep_news a where a.id='1'	
	</select>
	<insert id="insert">
		INSERT INTO `ep_news` 
			(`title`, `type`, `content`, `creat_time`) 
		VALUES 
			('2', '01', '1', now())
		
	</insert>
</mapper>